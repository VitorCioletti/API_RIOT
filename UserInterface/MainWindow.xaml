                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--Image and skins-->
                            <StackPanel Grid.Column="0">
                                <!--Champion image-->
                                <Image Source="C:\Users\CiolettiVitor\Desktop\Content\images\fiora.jpg" Width="300" HorizontalAlignment="Left" Margin="20,0,0,0" Height="380" Stretch="Uniform"/>
                                <!--Champion skins-->
                                <Grid Margin="20,5,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Width="60" Height="70" HorizontalAlignment="Left"  Stretch="Fill" ToolTip="Skin1" Source="C:\Users\CiolettiVitor\Desktop\Content\images\fioraskin1.jpg"/>
                                    <Image Grid.Column="1" Width="60" Height="70" HorizontalAlignment="Left"  Stretch="Fill" ToolTip="Skin2" Source="C:\Users\CiolettiVitor\Desktop\Content\images\fioraskin2.jpg"/>
                                    <Image Grid.Column="2" Width="60" Height="70" HorizontalAlignment="Left"  Stretch="Fill" ToolTip="Skin3" Source="C:\Users\CiolettiVitor\Desktop\Content\images\fioraskin3.jpg"/>
                                    <Image Grid.Column="3" Width="60" Height="70" HorizontalAlignment="Left"  Stretch="Fill" ToolTip="Skin4" Source="C:\Users\CiolettiVitor\Desktop\Content\images\fioraskin4.jpg"/>
                                </Grid>
                            </StackPanel>
                            <!--Champion informations and spells-->
                            <StackPanel Grid.Column="1">
                                <!--Champion info-->
                                <Label Content="Attack" FontSize="15" Margin="5,5,0,0" HorizontalAlignment="Left"/>
                                <ProgressBar Margin="10,0,0,0"/>
                                <Label Content="Defense" FontSize="15" Margin="5,5,0,0" HorizontalAlignment="Left"/>
                                <ProgressBar Margin="10,0,0,0"/>
                                <Label Content="Magic" FontSize="15" Margin="5,5,0,0" HorizontalAlignment="Left"/>
                                <ProgressBar Margin="10,0,0,0"/>
                                <Label Content="Difficulty" FontSize="15" Margin="5,5,0,0" HorizontalAlignment="Left"/>
                                <ProgressBar Margin="10,0,0,0"/>
                                <Label Content="Tags: Damage  -  Cooldown" HorizontalContentAlignment="Center" Margin="0,9,0,0"/>
                                <!--Champion spells-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!--Spell 1-->
                                    <Image  Grid.Column="0" Source="C:\Users\CiolettiVitor\Desktop\Content\images\FioraQ.png" Margin="10,15,0,0" Width="55">
                                        <Image.ToolTip>
                                            <StackPanel Width="230">
                                                <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Text="Leap Strike"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Justify">
                                                    Jax leaps toward a unit. If they are an enemy, he strikes them with his weapon.
                                                </TextBlock>
                                                <Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
                                                <StackPanel>
                                                    <TextBlock Text="Cost: 65/65/65/65/65"/>
