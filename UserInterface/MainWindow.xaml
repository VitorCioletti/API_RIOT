<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1100" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="#333" Height="70">
                <Image Source="lol.png" Stretch="Fill" Height="55" Width="150"/>
                <MenuItem Icon="" Height="70"/>
                <MenuItem Icon="" Height="70"/>
            </Menu>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="50">
                        <TextBlock FontWeight="Bold" Text="Champion name"/>
                        <Image Source="fiora.png" Stretch="UniformToFill" Height="400" Width="300" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Width="430" Height="400" HorizontalAlignment="Right" Margin="0,0,60,0">
                        <TextBlock Text="Lore" FontWeight="Bold" FontSize="15"/>
                        <TextBlock Height="130" Background="PaleGoldenrod"  FontSize="18" Text=""/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
